
{
  "name": "tenant_appointments",
  "fields": {
    "tenantId": {
      "type": "string",
      "required": true,
      "title": "ID do Inquilino"
    },
    "clientName": {
      "type": "string",
      "required": true,
      "title": "Nome do Cliente"
    },
    "clientEmail": {
      "type": "string",
      "required": true,
      "title": "Email do Cliente"
    },
    "clientPhone": {
      "type": "string",
      "required": true,
      "title": "Telefone do Cliente"
    },
    "serviceId": {
      "type": "string",
      "required": true,
      "title": "ID do Serviço"
    },
    "serviceName": {
      "type": "string",
      "required": true,
      "title": "Nome do Serviço"
    },
    "servicePrice": {
      "type": "number",
      "required": true,
      "title": "Preço do Serviço"
    },
    "appointmentDate": {
      "type": "string",
      "required": true,
      "title": "datetime"
    },
    "appointmentTime": {
      "type": "string",
      "required": true,
      "title": "Horário"
    },
    "status": {
      "type": "string",
      "enum": ["agendado", "confirmado", "em_andamento", "concluido", "cancelado", "nao_compareceu"],
      "default": "agendado",
      "title": "Status"
    },
    "staffAssigned": {
      "type": "string",
      "title": "Funcionário Designado"
    },
    "notes": {
      "type": "string",
      "title": "Observações"
    },
    "paymentStatus": {
      "type": "string",
      "enum": ["pendente", "pago", "cancelado"],
      "default": "pendente",
      "title": "Status do Pagamento"
    },
    "createdAt": {
      "type": "string",
      "title": "datetime"
    },
    "updatedAt": {
      "type": "string",
      "title": "datetime"
    }
  }
}
