
{
  "name": "tenants",
  "fields": {
    "subdomain": {
      "type": "string",
      "required": true,
      "unique": true,
      "title": "Subdomínio"
    },
    "businessName": {
      "type": "string",
      "required": true,
      "title": "Nome do Negócio"
    },
    "businessEmail": {
      "type": "string",
      "required": true,
      "title": "Email do Negócio"
    },
    "businessPhone": {
      "type": "string",
      "required": true,
      "title": "Telefone do Negócio"
    },
    "businessAddress": {
      "type": "object",
      "title": "Endereço do Negócio",
      "properties": {
        "street": { "type": "string", "title": "Rua" },
        "city": { "type": "string", "title": "Cidade" },
        "state": { "type": "string", "title": "Estado" },
        "zipCode": { "type": "string", "title": "CEP" }
      }
    },
    "plan": {
      "type": "string",
      "enum": ["basic", "premium", "enterprise"],
      "default": "basic",
      "title": "Plano"
    },
    "status": {
      "type": "string",
      "enum": ["trial", "active", "suspended", "cancelled"],
      "default": "trial",
      "title": "Status"
    },
    "trialEndsAt": {
      "type": "string",
      "title": "datetime"
    },
    "subscriptionEndsAt": {
      "type": "string",
      "title": "datetime"
    },
    "branding": {
      "type": "object",
      "title": "Branding",
      "properties": {
        "logo": { "type": "string", "title": "Logo URL" },
        "primaryColor": { "type": "string", "title": "Cor Primária" },
        "secondaryColor": { "type": "string", "title": "Cor Secundária" },
        "customCSS": { "type": "string", "title": "CSS Personalizado" }
      }
    },
    "features": {
      "type": "object",
      "title": "Funcionalidades",
      "properties": {
        "maxServices": { "type": "number", "title": "Máximo de Serviços" },
        "maxAppointments": { "type": "number", "title": "Máximo de Agendamentos" },
        "emailNotifications": { "type": "boolean", "title": "Notificações por Email" },
        "smsNotifications": { "type": "boolean", "title": "Notificações por SMS" },
        "customDomain": { "type": "boolean", "title": "Domínio Personalizado" },
        "analytics": { "type": "boolean", "title": "Analytics" },
        "multipleStaff": { "type": "boolean", "title": "Múltiplos Funcionários" }
      }
    },
    "workingHours": {
      "type": "object",
      "title": "Horários de Funcionamento",
      "properties": {
        "monday": { "type": "object", "properties": { "open": { "type": "string" }, "close": { "type": "string" }, "isOpen": { "type": "boolean" } } },
        "tuesday": { "type": "object", "properties": { "open": { "type": "string" }, "close": { "type": "string" }, "isOpen": { "type": "boolean" } } },
        "wednesday": { "type": "object", "properties": { "open": { "type": "string" }, "close": { "type": "string" }, "isOpen": { "type": "boolean" } } },
        "thursday": { "type": "object", "properties": { "open": { "type": "string" }, "close": { "type": "string" }, "isOpen": { "type": "boolean" } } },
        "friday": { "type": "object", "properties": { "open": { "type": "string" }, "close": { "type": "string" }, "isOpen": { "type": "boolean" } } },
        "saturday": { "type": "object", "properties": { "open": { "type": "string" }, "close": { "type": "string" }, "isOpen": { "type": "boolean" } } },
        "sunday": { "type": "object", "properties": { "open": { "type": "string" }, "close": { "type": "string" }, "isOpen": { "type": "boolean" } } }
      }
    },
    "ownerId": {
      "type": "string",
      "required": true,
      "title": "ID do Proprietário"
    },
    "createdAt": {
      "type": "string",
      "title": "datetime"
    },
    "updatedAt": {
      "type": "string",
      "title": "datetime"
    }
  }
}
